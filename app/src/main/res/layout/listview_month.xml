<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/listMonthView">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/monthList"
        android:text="Næœˆ"
        android:textSize="40dp"
        android:textColor="@color/gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inTitle"
        android:text="@string/count_in"
        android:textSize="20dp"
        android:textColor="@color/red"
        android:layout_toRightOf="@+id/monthList"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inTxt"
        android:textSize="20dp"
        android:textColor="@color/gray"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/inTitle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/outTitle"
        android:text="@string/count_out"
        android:textSize="20dp"
        android:textColor="@color/green"
        android:layout_below="@+id/inTitle"
        android:layout_toRightOf="@+id/monthList"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/outTxt"
        android:textSize="20dp"
        android:textColor="@color/gray"
        android:layout_below="@+id/inTxt"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/outTitle"/>

</RelativeLayout>
